import bpy
import bmesh

# Crear nueva malla
mesh = bpy.data.meshes.new("PuntosMesh")
obj = bpy.data.objects.new("PuntosObject", mesh)

# Crear bmesh
bm = bmesh.new()

# Añadir vértices (puntos)
bm.verts.new((0, 0, 0))
bm.verts.new((1, 0, 0))
bm.verts.new((0, 1, 0))
bm.verts.new((1, 1, 0))

# Actualizar malla
bm.to_mesh(mesh)
bm.free()

# Añadir a escena
bpy.context.collection.objects.link(obj)